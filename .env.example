# Configuración de Base de Datos
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/armonia_db?schema=public"

# Configuración de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_correo@gmail.com
SMTP_PASS=tu_contraseña_de_aplicacion
EMAIL_FROM="Armonía <noreply@armonia.com>"

# Configuración de Autenticación
JWT_SECRET=un_secreto_muy_largo_y_seguro
JWT_EXPIRATION=1h

# Configuración de la Aplicación
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Modo de Desarrollo
NODE_ENV=development

# Configuraciones de Seguridad
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Configuraciones de Notificaciones
NOTIFICATION_ENABLED=true
PUSH_NOTIFICATION_KEY=your_push_notification_key

# Configuraciones de Logging
LOG_LEVEL=debug
